<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.sudo248.sudoo.ui.util.Utils" />

        <variable
            name="viewModel"
            type="com.sudo248.sudoo.ui.activity.main.fragment.product_detail.ProductDetailViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshProductDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/contentDetail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="true"
                app:layout_constraintBottom_toTopOf="@+id/bottomDetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHeader"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="-25dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintDimensionRatio="H,3:2.8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgProductDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/zing_burger" />

                        <ImageView
                            android:id="@+id/btnBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"
                            android:onClick="@{(v) -> viewModel.onBack()}"
                            android:padding="10dp"
                            android:src="@drawable/ic_left_arrow"
                            app:tint="@color/white" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="30dp"
                        app:cardCornerRadius="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardHeader">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/txtNameProduct"
                                style="@style/textTitleLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="15dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="Zing Burger" />

                            <TextView
                                android:id="@+id/txtPriceProduct"
                                style="@style/textTitleMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/primaryColor"
                                app:layout_constraintEnd_toEndOf="@id/txtNameProduct"
                                app:layout_constraintStart_toStartOf="@id/txtNameProduct"
                                app:layout_constraintTop_toBottomOf="@id/txtNameProduct"
                                tools:text="30.000đ" />

                            <RatingBar
                                android:id="@+id/rating"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:numStars="5"
                                android:progressTint="@color/yellow_dark_20"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@id/txtPriceProduct"
                                app:layout_constraintTop_toBottomOf="@id/txtPriceProduct"
                                tools:rating="3" />

                            <TextView
                                android:id="@+id/txtNumberStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:layout_constraintBottom_toBottomOf="@id/rating"
                                app:layout_constraintStart_toEndOf="@+id/rating"
                                app:layout_constraintTop_toTopOf="@+id/rating"
                                tools:text="3.0" />

                            <TextView
                                android:id="@+id/txtNumberSold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="@id/txtNumberStart"
                                app:layout_constraintEnd_toStartOf="@+id/btnSendMessage"
                                app:layout_constraintHorizontal_bias="0.9"
                                app:layout_constraintStart_toEndOf="@+id/txtNumberStart"
                                app:layout_constraintTop_toTopOf="@id/txtNumberStart"
                                tools:text="Đã bán: 5,2k" />

                            <com.facebook.share.widget.SendButton
                                android:id="@+id/btnSendMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:background="@color/white"
                                android:drawableTint="@color/light_blue_A400"
                                android:text="@null"
                                app:layout_constraintBottom_toBottomOf="@id/txtNumberSold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/txtNumberSold" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/imgLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle_conner_10"
                        android:padding="10dp"
                        android:src="@drawable/ic_pin"
                        app:layout_constraintBottom_toTopOf="@+id/imgClock"
                        app:layout_constraintStart_toStartOf="@+id/cardInfo"
                        app:layout_constraintTop_toBottomOf="@+id/cardInfo" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imgLocation"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgLocation"
                        app:layout_constraintTop_toTopOf="@+id/imgLocation"
                        tools:text="Ngõ 54 Ao sen" />

                    <ImageView
                        android:id="@+id/imgClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/rectangle_conner_10"
                        android:padding="10dp"
                        android:src="@drawable/ic_clock"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/imgLocation"
                        app:layout_constraintTop_toBottomOf="@+id/imgLocation" />

                    <TextView
                        android:id="@+id/txtTimeOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imgClock"
                        app:layout_constraintEnd_toEndOf="@+id/txtLocation"
                        app:layout_constraintStart_toStartOf="@+id/txtLocation"
                        app:layout_constraintTop_toTopOf="@+id/imgClock"
                        tools:text="30 phút" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,375:52"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contentDetail">

                <ImageView
                    android:id="@+id/imgChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> viewModel.openChat()}"
                    android:paddingVertical="10dp"
                    android:src="@drawable/ic_chat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imgAddToCard"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primaryColor" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/gray_91"
                    app:layout_constraintBottom_toBottomOf="@id/imgChat"
                    app:layout_constraintEnd_toStartOf="@id/imgAddToCard"
                    app:layout_constraintStart_toEndOf="@id/imgChat"
                    app:layout_constraintTop_toTopOf="@id/imgChat" />

                <ImageView
                    android:id="@+id/imgAddToCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="@{(v) -> viewModel.addProductToCart()}"
                    android:paddingVertical="10dp"
                    android:src="@drawable/ic_add_package"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/txtBuyNow"
                    app:layout_constraintStart_toEndOf="@+id/imgChat"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primaryColor" />

                <TextView
                    android:id="@+id/txtBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/primaryColor"
                    android:gravity="center"
                    android:onClick="@{(v) -> viewModel.buyNow()}"
                    android:text="@string/mua_ngay"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="W,89:26"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>